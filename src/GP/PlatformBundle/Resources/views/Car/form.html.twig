{# src/GP/PlatformBundle/Resources/views/Car/form.html.twig #}

<div class="well">
  {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    {# Les erreurs générales du formulaire. #}
    {{ form_errors(form) }}

    <div class="form-group">
      {# Génération du label. #}
      {{ form_label(form.mark, "Marque", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

      {# Affichage des erreurs pour ce champ précis. #}
      {{ form_errors(form.mark) }}

      <div class="col-sm-4">
        {# Génération de l'input. #}
        {{ form_widget(form.mark, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>

    {# Idem pour un autre champ. #}
    <div class="form-group">
      {{ form_label(form.model, "Modèle", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
      {{ form_errors(form.model) }}
      <div class="col-sm-4">
        {{ form_widget(form.model, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>
    
    <div class="form-group">
      {{ form_label(form.year, "Année", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
      {{ form_errors(form.year) }}
      <div class="col-sm-4">
        {{ form_widget(form.year, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>
    
      <div class="form-group">
      {{ form_label(form.plate, "Plaque", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
      {{ form_errors(form.plate) }}
      <div class="col-sm-4">
        {{ form_widget(form.plate, {'attr': {'class': 'form-control'}}) }}
      </div>
    </div>
    

  {# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
  {{ form_widget(form.Enregistrer, {'attr': {'class': 'btn btn-primary'}}) }}

  {# Génération automatique des champs pas encore écrits.
     Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
     et tous les champs cachés (type « hidden »). #}
  {{ form_rest(form) }}
  
  {# Fermeture de la balise <form> du formulaire HTML #}
  {{ form_end(form) }}
</div>